<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_turquoise"
    tools:context="com.sunasterisk.englishflashcard.ui.splashscreen.SplashScreen">

    <TextView
        android:id="@+id/textViewSplashScreen"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_110"
        android:fontFamily="@font/edwardian"
        android:gravity="center"
        android:text="@string/title_flashcard_english"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_55"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSplashScreen"
        android:layout_width="@dimen/dp_350"
        android:layout_height="@dimen/dp_400"
        android:contentDescription="@string/content_image_plash_screen"
        android:src="@drawable/splashscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSplashScreen"
        app:layout_constraintVertical_bias="0.406" />
</androidx.constraintlayout.widget.ConstraintLayout>
